---
const stats = [
  { value: '5M+', label: 'Users' },
  { value: '4.9', label: 'Rating' },
  { value: '100K+', label: 'Reviews' },
];
---

<section class="relative min-h-screen flex items-center pt-20 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-primary-900/20 via-dark-950 to-dark-950"></div>
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-primary-500/10 rounded-full blur-3xl"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left">
        <!-- Social Proof -->
        <div class="flex items-center justify-center lg:justify-start gap-2 mb-6 animate-fade-in">
          <div class="flex -space-x-2">
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 border-2 border-dark-950"></div>
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 border-2 border-dark-950"></div>
            <div class="w-8 h-8 rounded-full bg-gradient-to-br from-green-400 to-green-600 border-2 border-dark-950"></div>
          </div>
          <span class="text-sm text-dark-300">Loved by <strong class="text-white">5M users</strong> with ⭐ 4.9 rating</span>
        </div>
        
        <!-- Headline -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6 animate-slide-up">
          Meet <span class="gradient-text">Curl</span><br />
          Track your workouts<br />
          <span class="text-primary-400">with just a picture</span>
        </h1>
        
        <!-- Subheadline -->
        <p class="text-lg md:text-xl text-dark-300 mb-8 max-w-xl mx-auto lg:mx-0 animate-slide-up animate-delay-100">
          Meet Curl, the AI-powered app for easy workout tracking. Snap a photo, analyze your form, or log your exercises and get instant feedback and progress insights.
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4 mb-12 animate-slide-up animate-delay-200">
          <a href="#download" class="btn-primary w-full sm:w-auto">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
            </svg>
            App Store
          </a>
          <a href="#download" class="btn-secondary w-full sm:w-auto">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
            </svg>
            Google Play
          </a>
        </div>
        
        <!-- Stats -->
        <div class="grid grid-cols-3 gap-4 max-w-md mx-auto lg:mx-0 animate-slide-up animate-delay-300">
          {stats.map((stat) => (
            <div class="text-center lg:text-left">
              <div class="text-2xl md:text-3xl font-bold text-white">{stat.value}</div>
              <div class="text-sm text-dark-400">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- App Mockup -->
      <div class="relative flex justify-center lg:justify-end animate-fade-in animate-delay-200">
        <div class="relative">
          <!-- Glow effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-primary-500/30 to-primary-600/30 rounded-[3rem] blur-3xl scale-110"></div>
          
          <!-- Phone mockup -->
          <div class="relative w-64 sm:w-72 md:w-80 lg:w-96 aspect-[9/19] bg-gradient-to-br from-dark-800 to-dark-900 rounded-[2.5rem] p-2 border border-dark-700 shadow-2xl animate-float">
            <div class="w-full h-full bg-dark-950 rounded-[2rem] overflow-hidden relative">
              <!-- Status bar -->
              <div class="absolute top-0 left-0 right-0 h-8 bg-dark-900 flex items-center justify-center">
                <div class="w-20 h-5 bg-dark-800 rounded-full"></div>
              </div>
              
              <!-- App content mockup -->
              <div class="pt-12 px-4 pb-4 h-full flex flex-col">
                <!-- Header -->
                <div class="flex items-center justify-between mb-6">
                  <div class="w-24 h-4 bg-dark-800 rounded"></div>
                  <div class="w-8 h-8 bg-primary-500/20 rounded-full"></div>
                </div>
                
                <!-- Main content area -->
                <div class="flex-1 space-y-4">
                  <!-- Workout card -->
                  <div class="bg-gradient-to-br from-primary-500/20 to-primary-600/10 rounded-2xl p-4 border border-primary-500/20">
                    <div class="flex items-center gap-3 mb-3">
                      <div class="w-12 h-12 bg-primary-500 rounded-xl flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                      </div>
                      <div>
                        <div class="w-20 h-3 bg-white/80 rounded mb-1"></div>
                        <div class="w-16 h-2 bg-dark-400 rounded"></div>
                      </div>
                    </div>
                    <div class="grid grid-cols-3 gap-2">
                      <div class="text-center">
                        <div class="text-lg font-bold text-white">45</div>
                        <div class="text-xs text-dark-400">mins</div>
                      </div>
                      <div class="text-center">
                        <div class="text-lg font-bold text-primary-400">320</div>
                        <div class="text-xs text-dark-400">cal</div>
                      </div>
                      <div class="text-center">
                        <div class="text-lg font-bold text-white">12</div>
                        <div class="text-xs text-dark-400">sets</div>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Progress bars -->
                  <div class="space-y-3">
                    <div>
                      <div class="flex justify-between text-xs mb-1">
                        <span class="text-dark-300">Weekly Goal</span>
                        <span class="text-primary-400">75%</span>
                      </div>
                      <div class="h-2 bg-dark-800 rounded-full overflow-hidden">
                        <div class="h-full w-3/4 bg-gradient-to-r from-primary-500 to-primary-400 rounded-full"></div>
                      </div>
                    </div>
                    <div>
                      <div class="flex justify-between text-xs mb-1">
                        <span class="text-dark-300">Strength</span>
                        <span class="text-green-400">+12%</span>
                      </div>
                      <div class="h-2 bg-dark-800 rounded-full overflow-hidden">
                        <div class="h-full w-[85%] bg-gradient-to-r from-green-500 to-green-400 rounded-full"></div>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Exercise list -->
                  <div class="space-y-2">
                    <div class="flex items-center gap-3 p-2 bg-dark-800/50 rounded-xl">
                      <div class="w-10 h-10 bg-blue-500/20 rounded-lg"></div>
                      <div class="flex-1">
                        <div class="w-24 h-2 bg-dark-600 rounded mb-1"></div>
                        <div class="w-16 h-2 bg-dark-700 rounded"></div>
                      </div>
                      <div class="text-xs text-green-400">✓</div>
                    </div>
                    <div class="flex items-center gap-3 p-2 bg-dark-800/50 rounded-xl">
                      <div class="w-10 h-10 bg-purple-500/20 rounded-lg"></div>
                      <div class="flex-1">
                        <div class="w-20 h-2 bg-dark-600 rounded mb-1"></div>
                        <div class="w-14 h-2 bg-dark-700 rounded"></div>
                      </div>
                      <div class="text-xs text-green-400">✓</div>
                    </div>
                  </div>
                </div>
                
                <!-- Bottom nav -->
                <div class="flex justify-around pt-4 border-t border-dark-800">
                  <div class="w-6 h-6 bg-primary-500 rounded-full"></div>
                  <div class="w-6 h-6 bg-dark-700 rounded-full"></div>
                  <div class="w-6 h-6 bg-dark-700 rounded-full"></div>
                  <div class="w-6 h-6 bg-dark-700 rounded-full"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

