<section class="py-20 md:py-32 relative overflow-hidden">
  <!-- Background elements -->
  <div class="absolute inset-0 bg-gradient-to-r from-primary-900/20 via-dark-950 to-purple-900/20"></div>
  <div class="absolute top-1/2 left-0 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl -translate-y-1/2"></div>
  <div class="absolute top-1/2 right-0 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl -translate-y-1/2"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left reveal">
        <span class="inline-flex items-center gap-2 px-4 py-2 bg-primary-500/10 border border-primary-500/20 rounded-full text-primary-400 text-sm font-medium mb-6">
          <span class="w-2 h-2 bg-primary-400 rounded-full animate-pulse"></span>
          New feature
        </span>
        
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
          Dark Mode<br />
          for a sleek training<br />
          experience! üåô‚ú®
        </h2>
        
        <p class="text-lg text-dark-300 mb-8 max-w-lg">
          Easy on the eyes during those early morning or late night gym sessions. 
          New features and improvements every week.
        </p>
        
        <div class="flex flex-wrap items-center justify-center lg:justify-start gap-4">
          <div class="flex items-center gap-2 text-dark-300">
            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Auto-switch</span>
          </div>
          <div class="flex items-center gap-2 text-dark-300">
            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>OLED optimized</span>
          </div>
          <div class="flex items-center gap-2 text-dark-300">
            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span>Battery saver</span>
          </div>
        </div>
      </div>
      
      <!-- Dark Mode Phone Mockup -->
      <div class="flex justify-center lg:justify-end reveal animate-delay-200">
        <div class="relative">
          <!-- Glow -->
          <div class="absolute inset-0 bg-gradient-to-r from-purple-500/30 to-primary-500/30 rounded-[3rem] blur-3xl scale-110"></div>
          
          <!-- Phone -->
          <div class="relative w-64 sm:w-72 md:w-80 aspect-[9/19] bg-gradient-to-br from-dark-800 to-dark-900 rounded-[2.5rem] p-2 border border-dark-700 shadow-2xl">
            <div class="w-full h-full bg-black rounded-[2rem] overflow-hidden">
              <!-- Status bar -->
              <div class="h-8 bg-black flex items-center justify-center">
                <div class="w-20 h-5 bg-dark-900 rounded-full"></div>
              </div>
              
              <!-- Dark mode content -->
              <div class="p-4 space-y-4">
                <!-- Header -->
                <div class="flex items-center justify-between">
                  <div>
                    <div class="text-xs text-dark-500">Good evening</div>
                    <div class="text-sm font-semibold text-white">Ready to workout?</div>
                  </div>
                  <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary-400 to-primary-600"></div>
                </div>
                
                <!-- Stats card -->
                <div class="bg-dark-900 rounded-2xl p-4">
                  <div class="flex items-center justify-between mb-4">
                    <span class="text-xs text-dark-400">This Week</span>
                    <span class="text-xs text-primary-400">+15%</span>
                  </div>
                  <div class="grid grid-cols-3 gap-2 text-center">
                    <div>
                      <div class="text-lg font-bold text-white">5</div>
                      <div class="text-xs text-dark-500">Workouts</div>
                    </div>
                    <div>
                      <div class="text-lg font-bold text-primary-400">4.2h</div>
                      <div class="text-xs text-dark-500">Time</div>
                    </div>
                    <div>
                      <div class="text-lg font-bold text-white">1.8k</div>
                      <div class="text-xs text-dark-500">Calories</div>
                    </div>
                  </div>
                </div>
                
                <!-- Quick actions -->
                <div class="grid grid-cols-2 gap-2">
                  <div class="bg-gradient-to-br from-primary-600 to-primary-700 rounded-xl p-3 text-center">
                    <svg class="w-6 h-6 mx-auto text-white mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div class="text-xs text-white font-medium">Start</div>
                  </div>
                  <div class="bg-dark-900 rounded-xl p-3 text-center">
                    <svg class="w-6 h-6 mx-auto text-dark-400 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                    </svg>
                    <div class="text-xs text-dark-400 font-medium">Scan</div>
                  </div>
                </div>
                
                <!-- Recent -->
                <div class="space-y-2">
                  <div class="text-xs text-dark-500 mb-2">Recent</div>
                  <div class="flex items-center gap-3 bg-dark-900 rounded-xl p-3">
                    <div class="w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
                      <span class="text-sm">üèãÔ∏è</span>
                    </div>
                    <div class="flex-1">
                      <div class="text-sm text-white">Push Day</div>
                      <div class="text-xs text-dark-500">Yesterday</div>
                    </div>
                    <span class="text-xs text-green-400">Done</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

